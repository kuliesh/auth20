<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="RegressionTests" thread-count="5">
    <test name="ElementsOnRegistration">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedElementsOnRegistration"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnRegistrationUA"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnRegistrationRU"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnRegistrationEN"/>
        </classes>
    </test>

    <test name="ElementsOnLogin">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedElementsOnLogin"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnLoginUA"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnLoginRU"/>
            <class name="auth.dev.net.alltests.ClassesDisplayedElementsTest.TestDisplayedTextOnLoginEN"/>
        </classes>
    </test>

    <test name="ErrorInputData">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="auth.dev.net.alltests.ClassErrorInputData.TestErrorCreateName"/>
            <class name="auth.dev.net.alltests.ClassErrorInputData.TestForbiddenPassword"/>
        </classes>
    </test>

    <test name="SecSettings">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="auth.dev.net.alltests.ClassesSecSettings.TestSessionText"/>
            <class name="auth.dev.net.alltests.ClassesSecSettings.TestSecrLogText"/>
            <class name="auth.dev.net.alltests.ClassesSecSettings.TestChangePasswordText"/>
            <class name="auth.dev.net.alltests.ClassesSecSettings.TestContactText"/>
            <class name="auth.dev.net.alltests.ClassesSecSettings.TestPersonalText"/>
        </classes>
    </test>

</suite>
